<!DOCTYPE html>
<html>
  <head>
    <title>Songs and durations!</title>
  </head>
  <body>
    <h1>Songs</h1>
    <!-- add a form for adding songs here -->
    <form method="POST" action="/songs">
      <label for="name">Song name</label>
      <input type="text" id="name" name="name" value="<%= it.song.name %>" /><br/>
      <label for="duration">Song duration</label>
      <input type="text" id="duration" name="duration" value="<%= it.song.duration %>" /><br/>
      <button type="submit">Add Song</button>
    </form>
    <table>
      <tr>
        <th>Song name</th>
        <th>Duration (seconds)</th>
      </tr>
      <!-- songs from the server should be listed here -->
      <% it.songs.forEach((song) => { %>
        <tr>
          <td><%= song.name %></td>
          <td><%= song.duration %></td>
        </tr>
      <% }); %>
    </table>
  </body>
</html>